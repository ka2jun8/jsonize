{
    "name": "Table data to json",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Jsonize",
    "icons": {
        "128": "resources/icon128.png"
    },
    "browser_action": {
        "default_title": "jsonize",
        "default_popup": "index.html",
        "default_icon": "resources/icon128.png"
    },
    "permission": [
        "tab",
        "http://*/*",
        "https://*/*"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "jsonize.js"
            ],
            "run_at": "document_start"
        }
    ]
}